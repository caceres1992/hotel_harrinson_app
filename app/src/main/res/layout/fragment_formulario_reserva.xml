<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.habitacion.FormularioReservaFragment">

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <ImageButton
            android:id="@+id/btn_back_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000"
            android:src="@drawable/ic_arrow_back" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="Resumen de su reserva."
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar9" />

    <TextView
        android:id="@+id/rserva_precio_habitacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/precio_habitacion"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_outline_king_bed_24"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/reserva_cant_camas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/reserva_tipo_habitacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tipohabitacion"
        app:layout_constraintStart_toStartOf="@+id/rserva_precio_habitacion"
        app:layout_constraintTop_toBottomOf="@+id/rserva_precio_habitacion" />

    <TextView
        android:id="@+id/reserva_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Descripcion ablablabla"
        app:layout_constraintStart_toStartOf="@+id/reserva_tipo_habitacion"
        app:layout_constraintTop_toBottomOf="@+id/reserva_tipo_habitacion" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fecha Inicio y Final :"
        app:layout_constraintStart_toStartOf="@+id/reserva_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/reserva_descripcion" />

    <TextView
        android:id="@+id/reserva_fecha_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="01-10-21"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="-->"
        app:layout_constraintBottom_toBottomOf="@+id/reserva_fecha_inicio"
        app:layout_constraintStart_toEndOf="@+id/reserva_fecha_inicio"
        app:layout_constraintTop_toTopOf="@+id/reserva_fecha_inicio" />

    <TextView
        android:id="@+id/reserva_fecha_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="01-12-21"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dia(s):"
        app:layout_constraintStart_toStartOf="@+id/reserva_fecha_inicio"
        app:layout_constraintTop_toBottomOf="@+id/reserva_fecha_inicio" />

    <TextView
        android:id="@+id/reserva_total_dias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 Dias"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <CheckBox
        android:id="@+id/cbx_reserva_estacionamiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Â¿Estacionamiento?"
        app:layout_constraintStart_toStartOf="@+id/reserva_total_dias"
        app:layout_constraintTop_toBottomOf="@+id/reserva_total_dias" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/reserva_placa_vehiculo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Placa de Vehiculo"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cbx_reserva_estacionamiento"
        app:layout_constraintTop_toBottomOf="@+id/cbx_reserva_estacionamiento" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="precio total"
        app:layout_constraintStart_toStartOf="@+id/reserva_placa_vehiculo"
        app:layout_constraintTop_toBottomOf="@+id/reserva_placa_vehiculo" />

    <TextView
        android:id="@+id/reserva_precio_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="S444"
        app:layout_constraintEnd_toEndOf="@+id/reserva_placa_vehiculo"
        app:layout_constraintTop_toBottomOf="@+id/reserva_placa_vehiculo" />

    <Button
        android:id="@+id/btn_reserva_finalizada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/amarillo_hotel"
        android:text="finalizar reserva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

</androidx.constraintlayout.widget.ConstraintLayout>