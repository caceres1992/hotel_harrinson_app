<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListadoHabitacionActivity">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_habitaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_claro_hotel">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_habitaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_outline_bedroom_parent_24"
            android:text="Habitaciones" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_promociones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_local_offer_24"
            android:text="Promociones" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerHabitacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        />

</LinearLayout>